rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isValidUserId(userId) {
      // Allow guest users (user_*) and Atlassian users
      return userId != null && userId.size() > 0;
    }
    
    function isRoomCreator(roomId, userId) {
      return get(/databases/$(database)/documents/rooms/$(roomId)).data.createdBy == userId;
    }
    
    function isTicketCreator(ticketId, userId) {
      return get(/databases/$(database)/documents/tickets/$(ticketId)).data.createdBy == userId;
    }
    
    // Rooms collection
    match /rooms/{roomId} {
      // Anyone can read rooms (for joining via link)
      allow read: if true;
      
      // Anyone can create rooms with valid data
      allow create: if request.resource.data.createdBy != null &&
                      request.resource.data.createdBy.size() > 0 &&
                      request.resource.data.name != null &&
                      request.resource.data.name.size() > 0;
      
      // Only room creator can update/delete (based on createdBy field)
      allow update, delete: if request.resource.data.createdBy == resource.data.createdBy &&
                              isRoomCreator(roomId, resource.data.createdBy);
      
      // Participants subcollection
      match /participants/{participantId} {
        // Anyone can read participants
        allow read: if true;
        
        // Users can create/update their own participant document
        allow create, update: if participantId != null && 
                                participantId.size() > 0 &&
                                request.resource.data.id == participantId;
        
        // Anyone can delete participants (for cleanup)
        allow delete: if true;
      }
    }
    
    // Tickets collection
    match /tickets/{ticketId} {
      // Anyone can read tickets (for room participants)
      allow read: if true;
      
      // Anyone can create tickets with valid data
      allow create: if request.resource.data.createdBy != null &&
                      request.resource.data.createdBy.size() > 0 &&
                      request.resource.data.roomId != null &&
                      request.resource.data.name != null;
      
      // Only ticket creator can update/delete
      allow update, delete: if resource.data.createdBy != null &&
                              isTicketCreator(ticketId, resource.data.createdBy);
    }
    
    // Votes collection
    match /votes/{voteId} {
      // Anyone can read votes (for room participants)
      allow read: if true;
      
      // Users can create/update votes with matching voterId
      // Vote ID format: {storyId}_{voterId}
      allow create, update: if request.resource.data.voterId != null &&
                              request.resource.data.voterId.size() > 0 &&
                              request.resource.data.storyId != null;
      
      // Anyone can delete votes (for cleanup)
      allow delete: if true;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
